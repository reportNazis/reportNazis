# --- ZITADEL CONFIGURATION ---
ZITADEL_MASTERKEY="MasterkeyNeedsToHave32Characters"
ZITADEL_EXTERALSECURE=false
ZITADEL_TLS_ENABLED=false
ZITADEL_PORT=8080
ZITADEL_LOGIN_PORT=3000

ZITADEL_FIRSTINSTANCE_ORG_HUMAN_USERNAME=admin
ZITADEL_FIRSTINSTANCE_ORG_HUMAN_PASSWORD=Start1234!

# Zitadel Database
ZITADEL_DB_HOST=zitadel-db
ZITADEL_DB_PORT=5432
ZITADEL_DB_NAME=zitadel
ZITADEL_DB_USER=zitadel
ZITADEL_DB_PASSWORD=zitadel
ZITADEL_DB_ADMIN_USER=postgres
ZITADEL_DB_ADMIN_PASSWORD=postgres

# Login Client
LOGIN_CLIENT_PAT_PATH=/current-dir/login-client.pat
LOGIN_CLIENT_USERNAME=login-client
LOGIN_CLIENT_NAME="Automatically Initialized IAM_LOGIN_CLIENT"

# --- APPLICATION CONFIGURATION ---

# Shared PostgreSQL Admin (for init script)
POSTGRES_ADMIN_USER=postgres
POSTGRES_ADMIN_PASSWORD=postgres-admin-change-in-prod

# --- IDENTITY SERVICE DB ---
IDENTITY_DB_NAME=identity_db
IDENTITY_DB_USER=identity_user
IDENTITY_DB_PASSWORD=identity-pass-change-in-prod

# --- BFF GATEWAY DB ---
BFF_DB_NAME=bff_db
BFF_DB_USER=bff_user
BFF_DB_PASSWORD=bff-pass-change-in-prod

# --- LOG SERVICE DB ---
LOG_DB_NAME=log_db
LOG_DB_USER=log_user
LOG_DB_PASSWORD=log-pass-change-in-prod

# --- FORM SERVICE DB ---
FORM_DB_NAME=form_db
FORM_DB_USER=form_user
FORM_DB_PASSWORD=form-pass-change-in-prod

# --- RESEARCH SERVICE DB ---
RESEARCH_DB_NAME=research_db
RESEARCH_DB_USER=research_user
RESEARCH_DB_PASSWORD=research-pass-change-in-prod

# Service Ports (Internal)
SERVICE_PORT=8000

# Gateway
GATEWAY_PORT=80

# --- BFF GATEWAY CONFIGURATION ---

# Security: Generate unique secrets for production
BFF_SECRET_KEY=django-insecure-change-in-production-bff-key


# Service-to-Service Authentication Token (shared across internal services)
INTERNAL_SERVICE_TOKEN=dev-internal-token-change-in-production

# JWT Configuration
JWT_AUDIENCE=gateway-bff
JWKS_CACHE_TTL=3600

# Cache Configuration
CACHE_TTL_DEFAULT=300

# Upstream Timeout (seconds)
UPSTREAM_TIMEOUT=30

# Debug Mode (set to false in production)
DEBUG=false

# --- ASSET SERVICE (MinIO / Fort Knox) ---

# MinIO Root Credentials
MINIO_ROOT_USER=minio-admin
MINIO_ROOT_PASSWORD=minio-secret-change-in-production

# MinIO Encryption Key (must be at least 32 characters for AES-256)
MINIO_KMS_SECRET_KEY=my-minio-encryption-key-min-32-chars-here

# MinIO Bucket Name
MINIO_BUCKET=assets

# Asset Service Authentication Token
ASSET_SERVICE_TOKEN=dev-asset-token-change-in-production

# Garbage Collection Settings
GC_INTERVAL_HOURS=24
GC_MAX_AGE_HOURS=24
